<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    
    <route id="media_manager_homepage" pattern="/media_library/homepage">
        <default key="_controller">YllyMediaManagerBundle:Admin:index</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="media_manager_view_media" pattern="/media_library/view/{media_id}">
        <default key="_controller">YllyMediaManagerBundle:Media:view</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="media_manager_list_media" pattern="/media_library/list">
        <default key="_controller">YllyMediaManagerBundle:Admin:list</default>
        <requirement key="_method">POST</requirement>
    </route>    
    <route id="media_manager_crop_media" pattern="/media_library/crop_media">
        <default key="_controller">YllyMediaManagerBundle:Media:crop</default>
        <requirement key="_method">POST</requirement>
    </route>    
    <route id="media_manager_view_media_original" pattern="/media_library/view_original/{media_id}">
        <default key="_controller">YllyMediaManagerBundle:Media:viewOriginal</default>
        <requirement key="_method">GET</requirement>
    </route>    
    <route id="media_manager_add_media" pattern="/media_library/add">
        <default key="_controller">YllyMediaManagerBundle:Admin:add</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="media_manager_edit_media" pattern="/media_library/edit/{media_id}">
        <default key="_controller">YllyMediaManagerBundle:Admin:edit</default>
        <requirement key="_method">GET</requirement>
    </route>    
    <route id="media_manager_save_media" pattern="/media_library/save">
        <default key="_controller">YllyMediaManagerBundle:Admin:save</default>
        <requirement key="_method">POST</requirement>
    </route>    
    <route id="media_manager_upload_media" pattern="/media_library/upload">
        <default key="_controller">YllyMediaManagerBundle:Admin:upload</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="media_manager_batch_actions" pattern="/media_library/batch_actions">
        <default key="_controller">YllyMediaManagerBundle:Admin:batch</default>
        <requirement key="_method">POST</requirement>
    </route>                                                    
</routes>
